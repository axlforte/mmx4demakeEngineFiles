function player_x_slash_claw(lvl = -1, t = 0) {
	charge_level = -1;
	shoot_type = shoot_types.normal;
	shoot_limit = 16;
	shoot_animation = "";
	switch (lvl) {
		case 0:
			player_shoot_projectile(obj_player_x_shot_homing_torpedo);
		break;
		default:
			if (lvl >= 3) {
				player_shoot_projectile(obj_player_x_shot_homing_torpedo_2);
			}
	}
	shot_id = 0;
}

